                    "type": "string",
                    "required": true
                },
                "productType": {
                    "type": "string",
                    "required": true
                },
                "slug": {
                    "type": "string",
                    "required": true
                },
                "description": {
                    "type": "string"
                },
                "metaTitle": {
                    "type": "string"
                },
                "metaDescription": {
                    "type": "string"
                },
                "metaKeywords": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                }
            }
        },
        "Product": {
            "id": "Product",
            "properties": {
                "id": {
                    "type": "string",
                    "required": true
                },
                "version": {
                    "type": "string",
                    "required": true
                },
                "productType": {
                    "title": "Product Type",
                    "type": "object",
                    "required": true,
                    "properties": {
                        "typeId": {
                            "type": "string",
                            "required": true
                        },
                        "id": {
                            "type": "string",
                            "required": true
                        }
                    }
                },
                "masterData": {
                    "type": "object",
                    "required": true,
                    "properties": {
                        "current": {
                            "type": "object",
                            "required": true,
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "required": true
                                },
                                "slug": {
                                    "type": "string",
                                    "required": true
                                }
                            }

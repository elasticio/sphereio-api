{
    "apiVersion": "v0",
    "swaggerVersion": "1.1",
    "basePath": "https://api-v0.sphere.io",
    "resourcePath": "/{{project}}/products",
    "apis": [
        {
            "path": "/{{project}}/products",
            "description": "Product resources",
            "operations": [
                {
                    "httpMethod": "POST",
                    "summary": "Create a Product",
                    "responseClass": "dynamic",
                    "nickname": "createProduct",
                    "parameters": [
                        {
                            "name" : "name",
                            "description": "Name",
                            "paramType": "body",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "lstring"
                        },
                        {
                            "name" : "productType",
                            "description": "Product Type",
                            "paramType": "body",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string",
                            "selectModel": {
                                "operation": "queryProductTypes",
                                "keyProperty" : "results.id",
                                "valueProperty" : "results.name"
                            }
                        },
                        {
                            "name" : "slug",
                            "description": "Slug",
                            "paramType": "body",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "ltring"
                        },
                        {
                            "name" : "description",
                            "description": "Description",
                            "paramType": "body",
                            "required": false,
                            "allowMultiple": false,
                            "dataType": "lstring"
                        },
                        {
                            "name" : "metaTitle",
                            "description": "Meta Title",
                            "paramType": "body",
                            "required": false,
                            "allowMultiple": false,
                            "dataType": "string"
                        },
                        {
                            "name" : "metaDescription",
                            "description": "Meta Description",
                            "paramType": "body",
                            "required": false,
                            "allowMultiple": false,
                            "dataType": "string"
                        },
                        {
                            "name" : "metaKeywords",
                            "description": "Meta Keywords",
                            "paramType": "body",
                            "required": false,
                            "allowMultiple": false,
                            "dataType": "string"
                        } ,
                        {
                            "name" : "title",
                            "description": "Title",
                            "paramType": "body",
                            "required": false,
                            "allowMultiple": false,
                            "dataType": "lstring"
                        }
                    ]
                }
            ]
        },
        {
            "path": "/{{project}}/products/{id}",
            "description": "Product resources",
            "operations": [
                {
                    "httpMethod": "DELETE",
                    "summary": "Delete a Product",
                    "responseClass": "void",
                    "nickname": "deleteProduct",
                    "parameters": [
                        {
                            "name": "id",
                            "description": "Product ID",
                            "paramType": "path",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        },
                        {
                            "name":"version",
                            "description": "Version",
                            "paramType": "query",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "int"
                        }
                    ]
                }
            ]
        }
    ],
    "models": {
        "Product": {
            "id": "Product",
            "properties": {
                "id": {
                    "type": "string",
                    "required": true
                },
                "version": {
                    "type": "string",
                    "required": true
                },
                "productType": {
                    "title": "Product Type",
                    "type": "object",
                    "required": true,
                    "properties": {
                        "typeId": {
                            "type": "string",
                            "required": true
                        },
                        "id": {
                            "type": "string",
                            "required": true
                        }
                    }
                },
                "masterData": {
                    "type": "object",
                    "required": true,
                    "properties": {
                        "current": {
                            "type": "object",
                            "required": true,
                            "properties": {
                                "name": {
                                    "type": "lstring",
                                    "required": true
                                },
                                "slug": {
                                    "type": "lstring",
                                    "required": true
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
